<div class="w-full md:w-2/3 mx-auto mb-4 flex justify-between items-center p-4 bg-white shadow-md">

  <section class="mb-32 text-gray-800">
    <div class="flex justify-center">
      <div class="text-center lg:max-w-3xl md:max-w-xl">
        <h2 class="text-3xl font-bold mb-12 px-6">Create new session</h2>
      </div>
    </div>

    <div class="flex flex-wrap">
      <div class="grow-0 shrink-0 basis-auto mb-12 lg:mb-0 w-full lg:w-5/12 px-3 lg:px-6">
          {{ form_start(form) }}
              <div class="form-group mb-6">
                  {{ form_label(form.title, 'Please enter the title session', {'label_attr': {'class': 'mb-2 font-bold text-lg text-gray-700'}} )}}
                  <div class="relative">
                      {{ form_widget(form.title, {'attr': {'class': 'form-input block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none', 'id': 'inputContact','placeholder': 'Enter the name of the session' }})}}
                  </div>
                  {{ form_errors(form.title)}}
              </div>
              <div class="form-group mb-6">
                  {{ form_label(form.sessionLength, 'How long should the session be', {'label_attr': {'class': 'mb-2 font-bold text-lg text-gray-700'}} )}}
                  <div class="relative">
                      {{ form_widget(form.sessionLength, {'attr': {'class': 'form-input block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none', 'id': 'inputContact','placeholder': 'Enter the value in minutes' }})}}
                  </div>
                  {{ form_errors(form.sessionLength)}}
              </div>
              <div class="form-group mb-6">
                  {{ form_label(form.breakLength, 'How much should the break be?', {'label_attr': {'class': 'mb-2 font-bold text-lg text-gray-700'}} )}}
                  <div class="relative">
                      {{ form_widget(form.breakLength, {'attr': {'class': 'form-input block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none', 'id': 'inputContact','placeholder': 'Enter the value in minutes' }})}}
                  </div>
                  {{ form_errors(form.breakLength)}}
              </div>
              <div class="form-group mb-6">
                  {{ form_label(form.sessionCount, 'How many sessions should there be', {'label_attr': {'class': 'mb-2 font-bold text-lg text-gray-700'}} )}}
                  <div class="relative">
                      {{ form_widget(form.sessionCount, {'attr': {'class': 'form-input block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none', 'id': 'inputContact','placeholder': 'Enter the value in minutes' }})}}
                  </div>
                  {{ form_errors(form.sessionCount)}}
              </div>
            <div>
                <button class="relative inline-flex items-center justify-center p-0.5 mt-2 mb-2 mr-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:bg-gray-900 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800">
                    <span class="relative px-5 py-2.5 transition-all ease-in duration-75 rounded-md group-hover:bg-opacity-0 dark:text-white">
                        Create Session 
                    </span>
                </button>
            </div>
        {{ form_end(form) }}
      </div>
      <div class="grow-0 shrink-0 basis-auto w-full lg:w-7/12">
        <div class="flex flex-wrap">
          <div class="mb-12 grow-0 shrink-0 basis-auto w-full lg:w-6/12 px-3 lg:px-6">
            <div class="flex items-start">
              <div class="grow ml-6">
                <p class="font-bold mb-1">Title of session</p>
                <p class="text-gray-500">The "Title" field indicates the name or title of the session or exercise.</p>
              </div>
            </div>
          </div>
          <div class="mb-12 grow-0 shrink-0 basis-auto w-full lg:w-6/12 px-3 lg:px-6">
            <div class="flex items-start">
              <div class="grow ml-6">
                <p class="font-bold mb-1">Session Length</p>
                <p class="text-gray-500">The "Session Length" field indicates the duration of a single work session.</p>
              </div>
            </div>
          </div>
          <div class="mb-12 grow-0 shrink-0 basis-auto w-full lg:w-6/12 px-3 lg:px-6">
            <div class="flex align-start">
              <div class="grow ml-6">
                <p class="font-bold mb-1">Break Length</p>
                <p class="text-gray-500">The "Break Length" field indicates the length of the break between sessions.</p>
              </div>
            </div>
          </div>
          <div class="mb-12 grow-0 shrink-0 basis-auto w-full lg:w-6/12 px-3 lg:px-6">
            <div class="flex align-start">
              <div class="grow ml-6">
                <p class="font-bold mb-1">Session Count</p>
                <p class="text-gray-500">The "Session Count" field indicates the number of sessions or exercises to be completed in a cycle.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>