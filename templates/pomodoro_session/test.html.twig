


{% extends 'base.html.twig' %}

{% block title %}TEST TIMER{% endblock %}

{% block body %}
<div class="w-full md:w-2/3 mx-auto mb-20 flex flex-col items-center justify-center p-2 bg-white shadow-md">
    <h1 class="text-4xl font-bold mb-4">Pomodoro Clock</h1>
    <div class="flex flex-col items-center justify-center w-60 h-60 relative">
        <div class="absolute top-0 left-0 w-full h-full rounded-full bg-blue-300"></div>
        <div class="absolute top-0 left-0 w-full h-full rounded-full flex items-center justify-center">
            <div class="text-6xl font-bold text-white">25:00</div>
        </div>
        <div class="absolute top-0 left-0 w-full h-full rounded-full flex items-center justify-center">
        </div>
    </div>
    <div class="flex mt-4">
        <button class="px-4 py-2 bg-blue-500 text-white rounded mr-4">Start</button>
        <button class="px-4 py-2 bg-red-500 text-white rounded">Reset</button>
    </div>
</div>
{% endblock %}